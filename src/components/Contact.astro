---
import { contactData } from '../data/contact';

interface Props {
	heading?: string;
	subheading1?: string;
	subheading2?: string;
	email?: string;
}

const { 
	heading = contactData.heading,
	subheading1 = contactData.subheading1,
	subheading2 = contactData.subheading2,
	email = contactData.email
} = Astro.props;
---

<section class="pb-20 border-t border-white/5 pt-20" data-animate="section">
	<div class="flex items-center justify-center mb-12">
		<div class="h-px w-12 bg-gray-800 mr-4"></div>
		<h2 class="text-xs uppercase tracking-widest text-gray-500">Contacto</h2>
		<div class="h-px w-12 bg-gray-800 ml-4"></div>
	</div>
	
	<div class="grid grid-cols-1 md:grid-cols-2 gap-16">
		<!-- Left Text -->
		<div>
			<p class="text-4xl font-bold text-white mb-4">{heading}</p>
			<p class="text-4xl font-bold text-white mb-4">{subheading1}</p>
			<p class="text-4xl font-bold text-white mb-8">{subheading2}</p>
			<span class="inline-block px-3 py-1 mb-6 bg-green-500/10 border border-green-500/20 rounded-full text-green-400 text-sm">
				✓ Disponible para oportunidades
			</span>
			<!-- Copy email -->
			<div class="flex items-center gap-3">
				<button
					type="button"
					class="contact-copy-email inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-white/10 bg-white/5 hover:bg-white/10 text-sm text-gray-300 transition-colors"
					data-email={email}
					aria-label="Copiar email"
				>
					<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
					</svg>
					<span class="contact-copy-label">Copiar email</span>
				</button>
				<span class="contact-copy-feedback text-sm text-green-400 opacity-0 transition-opacity" aria-live="polite">¡Copiado!</span>
			</div>
		</div>

		<!-- Right Form -->
		<div class="space-y-8">
			<p class="text-sm text-gray-400 bg-purple-500/10 border border-purple-500/20 rounded-lg p-3">
				El formulario es demostrativo. Por ahora puedes copiar mi email o escribirme por LinkedIn.
			</p>
			<div id="contact-message" class="contact-message hidden text-sm rounded-lg p-3" role="alert"></div>
			<form class="contact-form space-y-8">
				<div>
					<label for="contact-name" class="text-xs uppercase text-gray-500 mb-2 block">Tu nombre</label>
					<input id="contact-name" name="name" type="text" class="minimal-input">
				</div>
				<div>
					<label for="contact-whatsapp" class="text-xs uppercase text-gray-500 mb-2 block">Número de WhatsApp</label>
					<input id="contact-whatsapp" name="whatsapp" type="text" class="minimal-input">
				</div>
				<div>
					<label for="contact-email" class="text-xs uppercase text-gray-500 mb-2 block">Correo electrónico</label>
					<input id="contact-email" name="email" type="email" class="minimal-input">
				</div>

				<div class="pt-4 flex justify-end">
					<button type="submit" class="bg-white/10 hover:bg-white/20 text-white text-xs uppercase tracking-wide px-8 py-3 rounded-full border border-white/10 transition-all">
						Enviar mensaje
					</button>
				</div>
			</form>
		</div>
	</div>
</section>

<script>
	// Copiar email al portapapeles
	document.querySelectorAll('.contact-copy-email').forEach((btn) => {
		btn.addEventListener('click', async () => {
			const email = btn.getAttribute('data-email');
			const label = btn.querySelector('.contact-copy-label');
			const feedback = document.querySelector('.contact-copy-feedback');
			if (!email) return;
			try {
				await navigator.clipboard.writeText(email);
				if (label) label.textContent = '¡Copiado!';
				if (feedback) {
					feedback.classList.remove('opacity-0');
					setTimeout(() => feedback.classList.add('opacity-0'), 2000);
				}
				setTimeout(() => { if (label) label.textContent = 'Copiar email'; }, 2000);
			} catch {
				if (label) label.textContent = 'Error';
			}
		});
	});

	// Mensaje éxito/error al enviar (placeholder: sin backend muestra éxito al enviar)
	const form = document.querySelector('.contact-form');
	const messageEl = document.getElementById('contact-message');
	if (form && messageEl) {
		form.addEventListener('submit', (e) => {
			e.preventDefault();
			messageEl.classList.remove('hidden');
			messageEl.classList.remove('bg-red-500/10', 'text-red-400', 'border-red-500/20');
			messageEl.classList.add('bg-green-500/10', 'text-green-400', 'border', 'border-green-500/20');
			messageEl.textContent = 'Demo: En producción esto enviaría el mensaje. Por ahora usa el botón de copiar email.';
		});
	}
</script>

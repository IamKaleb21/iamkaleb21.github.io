---
import { studies } from '../data/studies';
---

<section class="mb-32" data-animate="section">
	<div class="flex items-center justify-center mb-16">
		<div class="h-[1px] w-12 bg-gray-800 mr-4"></div>
		<h2 class="text-xs uppercase tracking-widest text-gray-500">FormaciÃ³n y certificaciones</h2>
		<div class="h-[1px] w-12 bg-gray-800 ml-4"></div>
	</div>

	<div class="max-w-4xl mx-auto space-y-6">
		{studies.map((study) => (
			<div class="glass-panel p-6 rounded-xl hover:border-white/20 transition-all">
				<div class="flex flex-col md:flex-row md:justify-between md:items-start mb-3">
					<div>
						<div class="flex items-center gap-2 mb-1">
							<h4 class="text-lg font-semibold text-white">{study.title}</h4>
							{study.badge && (
								<span class="px-2 py-0.5 rounded-full text-[10px] uppercase tracking-wider bg-purple-500/10 border border-purple-500/30 text-purple-300">
									{study.badge}
								</span>
							)}
						</div>
						<p class="text-sm text-purple-400">{study.institution}</p>
					</div>
					<p class="text-xs text-gray-500 uppercase tracking-wider mt-2 md:mt-0">{study.dates}</p>
				</div>
				{study.description && (
					<p class="text-sm text-gray-400 leading-relaxed">{study.description}</p>
				)}
			</div>
		))}
	</div>
</section>

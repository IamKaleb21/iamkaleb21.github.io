---
import { Icon } from 'astro-icon/components';
import type { Experience } from '../data/experience';

interface Props {
	experience: Experience;
}

const { experience: exp } = Astro.props;
---

<div class="glass-panel p-6 rounded-xl hover:border-white/20 transition-all w-full max-w-lg">
	<div class="flex items-start justify-between gap-3 mb-2">
		<h4 class="text-lg font-semibold text-white flex items-center gap-2">
			{exp.position}
			<Icon name="mdi:arrow-right" class="w-5 h-5 text-purple-400 flex-shrink-0" />
		</h4>
	</div>
	<div class="flex flex-wrap items-center gap-x-4 gap-y-1 text-sm text-gray-400 mb-3">
		<span class="flex items-center gap-1.5 text-purple-400">
			<Icon name="mdi:domain" class="w-4 h-4" />
			{exp.company}{exp.location ? ` Â· ${exp.location}` : ''}
		</span>
		<span class="flex items-center gap-1.5">
			<Icon name="mdi:calendar" class="w-4 h-4" />
			{exp.dates}
		</span>
	</div>
	{exp.highlights && exp.highlights.length > 0 ? (
		<ul class="space-y-2">
			{exp.highlights.map((highlight) => (
				<li class="flex items-start gap-2.5 text-sm text-gray-400 leading-relaxed">
					<span class="w-1.5 h-1.5 bg-purple-400 rounded-full flex-shrink-0 mt-2"></span>
					<span>{highlight}</span>
				</li>
			))}
		</ul>
	) : exp.description ? (
		<p class="flex items-start gap-2.5 text-sm text-gray-400 leading-relaxed">
			<span class="w-1.5 h-1.5 bg-purple-400 rounded-full flex-shrink-0 mt-2"></span>
			<span>{exp.description}</span>
		</p>
	) : null}
</div>

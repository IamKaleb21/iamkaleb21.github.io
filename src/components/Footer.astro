---
import { Icon } from 'astro-icon/components';
import { siteData } from '../data/site';

const { socialLinks, location } = siteData;
const year = new Date().getFullYear();
---

<footer class="mt-24 border-t border-white/5 pt-8 pb-8">
	<div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-8 mb-6">
		<a href={socialLinks.github} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors flex items-center gap-2" aria-label="GitHub">
			<Icon name="simple-icons:github" class="w-5 h-5" />
			<span class="text-sm">GitHub</span>
		</a>
		<a href={socialLinks.linkedin} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors flex items-center gap-2" aria-label="LinkedIn">
			<Icon name="simple-icons:linkedin" class="w-5 h-5" />
			<span class="text-sm">LinkedIn</span>
		</a>
		<a href={socialLinks.email} class="text-gray-400 hover:text-white transition-colors flex items-center gap-2" aria-label="Email">
			<Icon name="mdi:email" class="w-5 h-5" />
			<span class="text-sm">Email</span>
		</a>
	</div>
	<p class="text-white font-medium mb-1">Gracias por visitar mi portafolio</p>
	<p class="text-xs text-gray-600 mb-2">{location}</p>
	<p class="text-xs text-gray-600">
		{year} Â· Hecho con <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-purple-400 transition-colors">Astro</a>
	</p>
</footer>

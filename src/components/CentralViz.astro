---
interface Props {
	role?: string;
	learning?: string;
}

const { 
	role = "full stack developer",
	learning = "React, Next.js, Node.js, arquitectura limpia"
} = Astro.props;
---

<section class="py-12 flex justify-center mb-32 relative" data-animate="section">
	<div class="relative w-full max-w-2xl border border-white/10 bg-black/40 rounded-xl overflow-hidden glass-panel">
		<!-- Barra de título tipo terminal -->
		<div class="flex items-center gap-2 px-4 py-2 border-b border-white/10 bg-white/[0.02]">
			<div class="w-2.5 h-2.5 rounded-full bg-red-500/80"></div>
			<div class="w-2.5 h-2.5 rounded-full bg-yellow-500/80"></div>
			<div class="w-2.5 h-2.5 rounded-full bg-green-500/80"></div>
			<span class="text-xs text-gray-500 ml-2">terminal</span>
		</div>

		<!-- Contenido tipo terminal -->
		<div class="p-6 font-mono text-sm" data-viz-center>
			<div class="flex items-center gap-2 text-gray-400 mb-2">
				<span class="text-green-400">➜</span>
				<span class="text-blue-400 font-bold">~</span>
				<span>whoami</span>
			</div>
			<p class="text-purple-300 mb-4 pl-4 uppercase">{role} <span class="text-gray-500 normal-case">--mission="solve-real-problems"</span></p>

			<div class="flex items-center gap-2 text-gray-400 mb-2">
				<span class="text-green-400">➜</span>
				<span class="text-blue-400 font-bold">~</span>
				<span>echo $CURRENT_FOCUS</span>
			</div>
			<p class="text-gray-300 mb-4 pl-4">"{learning}"</p>

			<div class="flex items-center gap-2 text-gray-400 mb-2">
				<span class="text-green-400">➜</span>
				<span class="text-blue-400 font-bold">~</span>
				<span>git log -1 --pretty=%s</span>
			</div>
			<p class="text-yellow-100/80 mb-4 pl-4">feat: Shipping robust & scalable web applications</p>

			<div class="flex items-center gap-2 text-gray-400 mt-4">
				<span class="text-green-400">➜</span>
				<span class="text-blue-400 font-bold">~</span>
				<span class="animate-pulse">_</span>
			</div>
		</div>
	</div>
</section>
